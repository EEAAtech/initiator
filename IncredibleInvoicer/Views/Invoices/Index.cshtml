@model PagedList.IPagedList<IncredibleInvoicer.Invoices>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Invoices";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Invoice ID
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().InvDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().POno)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().POdate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Customers.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Banks.BankName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().ReverseCharge)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FriendlyID)            
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InvDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.POno)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.POdate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Customers.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Banks.BankName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReverseCharge)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.InvoiceID }) |
            @Html.ActionLink("Details", "Details", new { id=item.InvoiceID }) 
            
        </td>
    </tr>
}

</table>
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter, EmpTypeID = ViewBag.EID }))